{
  "name": "decentraland-commons",
  "version": "1.2.0",
  "description": "Common functionality between the different Decentraland projects",
  "main": "./dist/index.js",
  "scripts": {
    "docs": "npx jsdoc -c conf.json -r src/**/*.js",
    "lint": "npx eslint .",
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "contracts": "cp -r src/contracts dist",
    "prebuild": "npm run lint && npm run clean && npm run init && npm run contracts",
    "build": "babel ./src -d ./dist --ignore test.js",
    "test": "mocha --compilers js:babel-register test/*"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "common",
    "modules",
    "decentraland"
  ],
  "author": "Decentraland",
  "license": "ISC",
  "dependencies": {
    "abi-decoder": "^1.0.8",
    "dotenv": "^4.0.0",
    "mailchimp-api-v3": "^1.7.1",
    "mongodb": "^2.2.31",
    "nodemailer": "^4.1.3",
    "pg": "^7.3.0",
    "web3": "^0.20.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.8.0",
    "jsdoc": "^3.5.5"
  }
}
